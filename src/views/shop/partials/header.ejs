<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Premium</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Fixed Header -->
    <header class="fixed-top bg-dark border-bottom border-secondary shadow-sm">
        <div class="container-fluid px-4 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <a href="/shop" class="text-white text-decoration-none">Dashboard</a>
                    </h4>
                    <% if (user) { %>
                        <p class="mb-0 text-secondary small">
                            Olá, <strong class="text-white">
                                <%= user.name %>
                            </strong>
                            <span class="badge bg-secondary text-uppercase">
                                <%= user.role %>
                            </span>
                        </p>
                        <% } %>
                </div>
                <% if (user) { %>
                    <a href="/logout" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right me-1"></i>
                        Sair
                    </a>
                    <% } %>
            </div>
        </div>

        <!-- Action Cards -->
        <% if (user) { %>
            <div class="container-fluid px-4 pb-3">
                <div class="row g-3">
                    <% if (user.role==='admin' ) { %>
                        <div class="col-md-3">
                            <a href="/product/create-product" class="text-decoration-none">
                                <div class="card bg-dark border-secondary h-100 hover-card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-box-seam fs-3 text-primary"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="card-title mb-0 text-white">Criar Produto</h6>
                                                <p class="card-text small text-secondary mb-0">Adicionar novo produto
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/category/create-category" class="text-decoration-none">
                                <div class="card bg-dark border-secondary h-100 hover-card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-grid-3x3-gap fs-3 text-success"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="card-title mb-0 text-white">Criar Categoria</h6>
                                                <p class="card-text small text-secondary mb-0">Adicionar nova categoria
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/coupon/create-coupon" class="text-decoration-none">
                                <div class="card bg-dark border-secondary h-100 hover-card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <i class="bi bi-tag fs-3 text-warning"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="card-title mb-0 text-white">Criar Cupom</h6>
                                                <p class="card-text small text-secondary mb-0">Adicionar novo cupom</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                            <% if (user.role==='admin' ) { %>
                                <div class="col-md-3">
                                    <% } %>
                                        <% if (user.role==='user' ) { %>
                                            <div class="col-12">
                                                <% } %>
                                                    <a href="/cart" class="text-decoration-none">
                                                        <div class="card bg-primary border-0 h-100 hover-card">
                                                            <div class="card-body">
                                                                <div class="d-flex align-items-center">
                                                                    <div class="flex-shrink-0">
                                                                        <i class="bi bi-cart-plus fs-3 text-white"></i>
                                                                    </div>
                                                                    <div class="flex-grow-1 ms-3">
                                                                        <h5 class="card-title mb-0 text-white">Carrinho
                                                                        </h5>
                                                                        <p class="card-text small text-white-50 mb-0">
                                                                            Ver seu
                                                                            carrinho
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </a>
                                            </div>
                                </div>
                </div>
                <% } %>
    </header>

    <!-- Main Content with Fixed Sidebar -->
    <div class="container-fluid" style="margin-top: 220px;">
        <% if (user) { %>
            <div class="row">
                <!-- Fixed Sidebar -->
                <nav class="col-md-2 d-md-block bg-dark sidebar position-fixed start-0 border-end border-secondary"
                    style="top: 220px; height: calc(100vh - 220px); overflow-y: auto;">
                    <div class="position-sticky pt-3">
                        <h6
                            class="sidebar-heading d-flex justify-content-between align-items-center px-3 mb-2 text-secondary text-uppercase">
                            <span>Navegação</span>
                        </h6>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-secondary" href="/product/list-products">
                                    <i class="bi bi-box-seam me-2"></i>
                                    Produtos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" href="/category/list-categories">
                                    <i class="bi bi-grid-3x3-gap me-2"></i>
                                    Categorias
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" href="/coupon/list-coupons">
                                    <i class="bi bi-tag me-2"></i>
                                    Cupons
                                </a>
                            </li>
                            <% if (user.role==='user' ) { %>
                                <li class="nav-item">
                                    <a class="nav-link text-secondary" href="/order">
                                        <i class="bi bi-bag-check me-2"></i>
                                        Meus Pedidos
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                        <hr>
                        <h6
                            class="sidebar-heading d-flex justify-content-between align-items-center px-3 mb-2 text-secondary text-uppercase">
                            <span>Categorias</span>
                        </h6>
                        <% if (categories && categories.length> 0) { %>
                            <ul class="nav flex-column">
                                <% categories.forEach(category=> { %>
                                    <a href=" /category/list-categories/<%=category.id %>"
                                        class="nav-link text-secondary">
                                        <i class="me-2"></i>
                                        <%= category.name %>
                                    </a>
                                    <% }) } %>
                            </ul>
                    </div>
                </nav>

                <!-- Main Content Area -->
                <main class="col-md-10 ms-sm-auto px-md-4 offset-md-2">
                    <% } else { %>
                        <main class="container">
                            <% } %>