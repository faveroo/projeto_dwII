<%- include('partials/header') %>

    <div class="container-fluid py-4">
        <h2 class="h3 mb-4 text-white">Produtos por Categoria</h2>
        <div class="row g-3">
            <% category.products.forEach(product=> { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card bg-dark border-secondary h-100 hover-card shadow-sm">
                        <div class="card-body p-3">
                            <a href="/product/product-detail/<%= product.id %>" class="text-decoration-none">
                                <div class="d-flex align-items-start mb-3">

                                    <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle d-flex justify-content-center align-items-center flex-shrink-0"
                                        style="width: 45px; height: 45px;">
                                        <i class="bi bi-box-seam fs-4"></i>
                                    </div>

                                    <div class="flex-grow-1 ms-3 overflow-hidden">

                                        <h5 class="text-white mb-1 fw-bold text-truncate" title="<%= product.name %>">
                                            <%= product.name %>
                                        </h5>

                                        <p class="text-info fw-semibold mb-0">
                                            <i class="bi bi-cash me-1"></i>R$ <%= product.price %>
                                        </p>
                                    </div>
                                </div>

                                <p class="text-secondary small mb-3 text-truncate-2" style="min-height: 2.5em;">
                                    <%= product.description %>
                                </p>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <small class="text-secondary">
                                        Estoque: <strong>
                                            <%= product.stock %>
                                        </strong>
                                    </small>
                                </div>

                            </a>
                            <% if (product.stock> 0) { %>
                                <form action="/cart/add/<%= product.id %>">
                                    <button
                                        class="btn btn-success w-100 btn-sm d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-cart-plus"></i>
                                        Adicionar ao carrinho
                                    </button>
                                </form>
                                <% } else { %>
                                    <button
                                        class="btn btn-danger w-100 btn-sm d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-cart-plus"></i>
                                        Fora de estoque
                                    </button>
                                    <% } %>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <% if (category.products.length===0) { %>
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-box-seam text-secondary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-white">Nenhum produto encontrado</h4>
            </div>
            <% } %>
    </div>

    <%- include('partials/footer') %>