<%- include('partials/header') %>

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0 text-white">Lista de Produtos</h2>
            <% if (user && user.role==='admin' ) { %>
                <a href="/product/create-product" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Novo Produto
                </a>
                <% } %>
        </div>

        <% if (error && error.length> 0) { %>
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    <%= error %>
                </div>
            </div>
            <% } %>

                <% if (success && success.length> 0) { %>
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <div>
                            <%= success %>
                        </div>
                    </div>
                    <% } %>

                        <div class="row g-3">
                            <% products.forEach(product=> { %>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                                    <div class="card bg-dark border-secondary h-100 hover-card shadow-sm">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-start mb-3">

                                                <!-- Ícone do produto -->
                                                <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle d-flex justify-content-center align-items-center flex-shrink-0"
                                                    style="width: 45px; height: 45px;">
                                                    <i class="bi bi-box-seam fs-4"></i>
                                                </div>

                                                <!-- Conteúdo -->
                                                <div class="flex-grow-1 ms-3 overflow-hidden">

                                                    <!-- Nome do produto -->
                                                    <h5 class="text-white mb-1 fw-bold text-truncate"
                                                        title="<%= product.name %>">
                                                        <%= product.name %>
                                                    </h5>

                                                    <!-- Preço -->
                                                    <p class="text-info fw-semibold mb-0">
                                                        <i class="bi bi-cash me-1"></i>R$ <%= product.price %>
                                                    </p>
                                                </div>
                                            </div>

                                            <!-- Descrição -->
                                            <p class="text-secondary small mb-3 text-truncate-2"
                                                style="min-height: 2.5em;">
                                                <%= product.description %>
                                            </p>

                                            <!-- Meta info (Categoria e Estoque) -->
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <% categories.forEach(category=> { %>
                                                    <% if (category.id===product.category_id) { %>
                                                        <span
                                                            class="badge bg-primary bg-opacity-25 text-primary border border-primary border-opacity-25">
                                                            <i class="bi bi-tag me-1"></i>
                                                            <%= category.name %>
                                                        </span>
                                                        <% } %>
                                                            <% }) %>
                                                                <small class="text-secondary">
                                                                    Estoque: <strong>
                                                                        <%= product.stock %>
                                                                    </strong>
                                                                </small>
                                            </div>

                                            <!-- Botão Adicionar ao Carrinho -->
                                            <button
                                                class="btn btn-success w-100 btn-sm d-flex align-items-center justify-content-center gap-2">
                                                <i class="bi bi-cart-plus"></i>
                                                Adicionar ao carrinho
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <% if (products.length===0) { %>
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <i class="bi bi-box-seam text-secondary" style="font-size: 4rem;"></i>
                                </div>
                                <h4 class="text-white">Nenhum produto encontrado</h4>
                                <p class="text-secondary">Comece adicionando novos produtos ao seu catálogo.</p>
                                <% if (user && user.role==='admin' ) { %>
                                    <a href="/product/create-product" class="btn btn-primary mt-2">
                                        <i class="bi bi-plus-lg me-2"></i>Criar Primeiro Produto
                                    </a>
                                    <% } %>
                            </div>
                            <% } %>
    </div>

    <style>
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>

    <%- include('partials/footer') %>