<%- include('partials/header') %>

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0 text-white">Lista de Produtos</h2>
            <% if (user && user.role==='admin' ) { %>
                <a href="/product/create-product" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Novo Produto
                </a>
                <% } %>
        </div>

        <% if (error && error.length> 0) { %>
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    <%= error %>
                </div>
            </div>
            <% } %>

                <% if (success && success.length> 0) { %>
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <div>
                            <%= success %>
                        </div>
                    </div>
                    <% } %>

                        <div class="row g-4">
                            <% products.forEach(product=> { %>
                                <div class="card bg-dark border-secondary h-100 hover-card shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start">

                                            <!-- Ícone do produto -->
                                            <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle d-flex justify-content-center align-items-center"
                                                style="width: 55px; height: 55px;">
                                                <i class="bi bi-grid-3x3-gap fs-3"></i>
                                            </div>

                                            <!-- Conteúdo -->
                                            <div class="flex-grow-1 ms-3">

                                                <!-- Nome do produto -->
                                                <h5 class="text-white mb-1 fw-bold">
                                                    <%= product.name %>
                                                </h5>

                                                <!-- Descrição -->
                                                <p class="text-secondary small mb-2">
                                                    <%= product.description %>
                                                </p>

                                                <!-- Categoria -->
                                                <% categories.forEach(category=> { %>
                                                    <% if (category.id===product.category_id) { %>
                                                        <span class="badge bg-primary bg-opacity-50 text-light mb-2">
                                                            <i class="bi bi-tag"></i>
                                                            <%= category.name %>
                                                        </span>
                                                        <% } %>
                                                            <% }) %>

                                                                <!-- Preço -->
                                                                <p class="text-info fw-semibold mb-1">
                                                                    <i class="bi bi-cash"></i> R$ <%= product.price %>
                                                                </p>

                                                                <!-- Estoque -->
                                                                <p class="text-secondary small mb-0">
                                                                    <i class="bi bi-box-seam"></i> Estoque: <strong>
                                                                        <%= product.stock %>
                                                                    </strong>
                                                                </p>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <% if (products.length===0) { %>
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <i class="bi bi-box-seam text-secondary" style="font-size: 4rem;"></i>
                                </div>
                                <h4 class="text-white">Nenhum produto encontrado</h4>
                                <p class="text-secondary">Comece adicionando novos produtos ao seu catálogo.</p>
                                <% if (user && user.role==='admin' ) { %>
                                    <a href="/product/create-product" class="btn btn-primary mt-2">
                                        <i class="bi bi-plus-lg me-2"></i>Criar Primeiro Produto
                                    </a>
                                    <% } %>
                            </div>
                            <% } %>
    </div>

    <style>
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>

    <%- include('partials/footer') %>