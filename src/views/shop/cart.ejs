<%- include('partials/header') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-white mb-4">
                    <i class="bi bi-cart3 me-2"></i>
                    Seu Carrinho
                </h1>
            </div>
        </div>

        <% if (cart.length===0) { %>
            <div class="row">
                <div class="col-12">
                    <div class="card bg-dark border-secondary">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-cart-x display-1 text-secondary mb-3"></i>
                            <h3 class="text-white mb-3">Seu carrinho está vazio</h3>
                            <p class="text-secondary mb-4">Adicione produtos para começar suas compras!</p>
                            <a href="/product/list-products" class="btn btn-primary">
                                <i class="bi bi-shop me-2"></i>
                                Ver Produtos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } else { %>
                <div class="row">
                    <div class="col-lg-8 mb-4">
                        <div class="card bg-dark border-secondary">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-dark table-hover mb-0">
                                        <thead class="border-secondary">
                                            <tr>
                                                <th class="text-white">Produto</th>
                                                <th class="text-white text-center">Preço</th>
                                                <th class="text-white text-center">Quantidade</th>
                                                <th class="text-white text-center">Subtotal</th>
                                                <th class="text-white text-center">Ação</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% cart.forEach(item=> { %>
                                                <tr>
                                                    <td class="align-middle">
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-secondary rounded p-2 me-3">
                                                                <i class="bi bi-box-seam text-white"></i>
                                                            </div>
                                                            <span class="text-white">
                                                                <%= item.name %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle text-center text-white">
                                                        R$ <%= Number(item.price).toFixed(2) %>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <span class="badge bg-primary">
                                                            <%= item.quantity %>
                                                        </span>
                                                    </td>
                                                    <td class="align-middle text-center text-white fw-bold">
                                                        R$ <%= (Number(item.price) * item.quantity).toFixed(2) %>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <form action="/cart/remove/<%= item.id %>" method="POST"
                                                            class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                title="Remover item">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card bg-dark border-secondary sticky-top" style="top: 20px;">
                            <div class="card-header bg-secondary border-0">
                                <h5 class="text-white mb-0">
                                    <i class="bi bi-receipt me-2"></i>
                                    Resumo do Pedido
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="text-secondary">Subtotal:</span>
                                    <span class="text-white">R$ <%= total.toFixed(2) %></span>
                                </div>
                                <% if (coupon) { %>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-success">Cupom <%= coupon.code %> aplicado:</span>
                                        <span class="text-success">- R$ <%= discount.toFixed(2) %></span>
                                    </div>
                                    <% } %>

                                        <form action="/cart/apply-coupon" method="POST" class="mb-3">
                                            <label class="text-secondary small mb-1">
                                                <i class="bi bi-ticket-perforated"></i> Cupom de desconto
                                            </label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" name="coupon"
                                                    placeholder="Digite o cupom">
                                                <button class="btn btn-outline-primary" type="submit">
                                                    Aplicar
                                                </button>
                                            </div>
                                        </form>


                                        <hr class="border-secondary">
                                        <div class="d-flex justify-content-between mb-4">
                                            <span class="text-white fw-bold fs-5">Total:</span>
                                            <span class="text-primary fw-bold fs-5">R$ <%= finalPrice.toFixed(2) %>
                                                    </span>
                                        </div>
                                        <form action="/order/checkout" method="POST">
                                            <button type="submit" class="btn btn-primary w-100 py-2">
                                                <i class="bi bi-check-circle me-2"></i>
                                                Finalizar Compra
                                            </button>
                                        </form>
                                        <a href="/product" class="btn btn-outline-secondary w-100 mt-2">
                                            <i class="bi bi-arrow-left me-2"></i>
                                            Continuar Comprando
                                        </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>

    <%- include('partials/footer') %>