<%- include('../partials/header') %>

    <div class="container-fluid py-4">
        <h2 class="h3 mb-4 text-white">Cupons</h2>

        <div class="row g-3">
            <% coupons.forEach(coupon=> { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card bg-dark border-secondary h-100 hover-card shadow-sm">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center">

                                <!-- Ícone do produto -->
                                <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle d-flex justify-content-center align-items-center flex-shrink-0"
                                    style="width: 45px; height: 45px;">
                                    <i class="bi bi-tag-fill fs-4"></i>
                                </div>

                                <!-- Conteúdo -->
                                <div class="flex-grow-1 ms-3 overflow-hidden">

                                    <!-- Nome do produto -->
                                    <h5 class="text-white mb-1 fw-bold text-truncate">
                                        <%= coupon.name %>
                                    </h5>

                                    <!-- Descrição -->
                                    <p class="text-secondary small mb-0 text-truncate">
                                        <%= coupon.description %>
                                    </p>

                                    <!-- Preço -->
                                    <p class="text-success small mb-0 text-truncate">
                                        <%= coupon.percent %>%
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <%- include('../partials/footer') %>