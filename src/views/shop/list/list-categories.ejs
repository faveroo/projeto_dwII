<%- include('../partials/header') %>

    <div class="container-fluid py-4">
        <h2 class="h3 mb-4 text-white">Categorias</h2>

        <div class="row g-3">
            <% categories.forEach(category=> { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card bg-dark border-secondary h-100 hover-card shadow-sm">

                        <div class="card-body p-3 d-flex justify-content-between align-items-center">

                            <!-- Área clicável -->
                            <div class="d-flex align-items-center position-relative flex-grow-1 me-2">

                                <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle 
                    d-flex justify-content-center align-items-center flex-shrink-0" style="width: 45px; height: 45px;">
                                    <i class="bi bi-grid-3x3-gap fs-4"></i>
                                </div>

                                <div class="ms-3 overflow-hidden">
                                    <h5 class="text-white mb-1 fw-bold text-truncate">
                                        <%= category.name %>
                                    </h5>
                                    <p class="text-secondary small mb-0">
                                        <%= category.description %>
                                    </p>
                                </div>

                                <!-- stretched-link -->
                                <a href="/category/list-categories/<%= category.id %>" class="stretched-link"></a>
                            </div>

                            <!-- Container Fixo do Botão (sempre ocupa espaço) -->
                            <div style="width: 40px;" class="d-flex justify-content-end">
                                <% if (user.role==="admin" ) { %>
                                    <form action="/category/remove-category/<%= category.id %>" method="post">
                                        <button type="submit" class="btn btn-danger btn-sm z-3">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    <% } %>
                            </div>

                        </div>

                    </div>
                </div>
                <% }) %>
        </div>
    </div>