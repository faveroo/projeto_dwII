<%- include('../partials/header') %>

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0 text-white">Lista de Produtos</h2>

            <% if (user && user.role==='admin' ) { %>
                <a href="/product/create-product" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Novo Produto
                </a>
                <% } %>
        </div>

        <div class="row g-3">
            <% products.forEach(product=> { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card bg-dark product-card border-secondary h-100 hover-card shadow-sm">

                        <div class="card-body p-3 d-flex flex-column">

                            <a href="/product/product-detail/<%= product.id %>"
                                class="text-decoration-none flex-grow-0">
                                <% if (product.image) { %>
                                    <div class="mb-3">
                                        <img src="<%= product.image %>" alt="<%= product.name %>"
                                            class="img-fluid rounded"
                                            style="object-fit: cover; width: 100%; height: 170px;">
                                    </div>
                                    <% } else { %>
                                        <div class="mb-3 bg-secondary bg-opacity-10 rounded-3 d-flex 
                        align-items-center justify-content-center text-secondary" style="width: 100%; height: 170px;">
                                            <i class="bi bi-box-seam fs-3"></i>
                                        </div>
                                        <% } %>


                                            <div class="d-flex align-items-start mb-3">

                                                <div class="icon-container bg-success bg-opacity-25 text-success rounded-circle 
                                            d-flex justify-content-center align-items-center flex-shrink-0"
                                                    style="width: 45px; height: 45px;">
                                                    <i class="bi bi-box-seam fs-4"></i>
                                                </div>

                                                <div class="flex-grow-1 ms-3 overflow-hidden">
                                                    <h5 class="text-white mb-1 fw-bold text-truncate"
                                                        title="<%= product.name %>">
                                                        <%= product.name %>
                                                    </h5>

                                                    <p class="text-info fw-semibold mb-0">
                                                        <i class="bi bi-cash me-1"></i>R$ <%= product.price %>
                                                    </p>
                                                </div>
                                            </div>

                                            <p class="text-secondary small mb-3 text-truncate-2"
                                                style="min-height: 2.5em;">
                                                <%= product.description %>
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <% categories.forEach(category=> { %>
                                                    <% if (category.id===product.category_id) { %>
                                                        <span class="badge bg-primary bg-opacity-25 text-primary 
                                                     border border-primary border-opacity-25">
                                                            <i class="bi bi-grid-3x3-gap me-1"></i>
                                                            <%= category.name %>
                                                        </span>
                                                        <% } %>
                                                            <% }) %>

                                                                <small class="text-secondary">
                                                                    Estoque: <strong>
                                                                        <%= product.stock %>
                                                                    </strong>
                                                                </small>
                                            </div>
                            </a>

                            <div class="flex-grow-1"></div>

                            <% if (product.stock> 0) { %>
                                <form action="/cart/add/<%= product.id %>" method="POST">
                                    <button
                                        class="btn btn-success w-100 btn-sm d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-cart-plus"></i>
                                        Adicionar ao carrinho
                                    </button>
                                </form>
                                <% } else { %>
                                    <button
                                        class="btn btn-danger w-100 btn-sm d-flex align-items-center justify-content-center gap-2"
                                        disabled>
                                        <i class="bi bi-cart-x"></i>
                                        Esgotado
                                    </button>
                                    <% } %>

                        </div>

                    </div>
                </div>
                <% }) %>
        </div>

        <% if (products.length===0) { %>
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-box-seam text-secondary" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-white">Nenhum produto encontrado</h4>
                <p class="text-secondary">Comece adicionando novos produtos ao seu cat√°logo.</p>

                <% if (user && user.role==='admin' ) { %>
                    <a href="/product/create-product" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-lg me-2"></i>Criar Primeiro Produto
                    </a>
                    <% } %>
            </div>
            <% } %>
    </div>

    <style>
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-card {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .product-card .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
    </style>

    <%- include('../partials/footer') %>