<%- include('../partials/header') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-card">
                    <h1>Criar Produto</h1>

                    <% if (error && error.length> 0) { %>
                        <div class="badge-error">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                        </div>
                        <% } %>

                            <% if (success && success.length> 0) { %>
                                <div class="badge-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <%= success %>
                                </div>
                                <% } %>

                                    <form action="/product/store-product" method="POST">
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Nome</label>
                                            <input type="text" id="name" name="name" required class="form-control"
                                                placeholder="Nome do produto">
                                        </div>

                                        <div class="mb-3">
                                            <label for="description" class="form-label">Descrição</label>
                                            <input type="text" id="description" name="description" required
                                                class="form-control" placeholder="Descrição do produto">
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="price" class="form-label">Preço</label>
                                                <div class="input-group">
                                                    <span
                                                        class="input-group-text bg-dark text-light border-secondary">R$</span>
                                                    <input type="text" id="price" name="price" required
                                                        class="form-control" placeholder="0.00">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="stock" class="form-label">Estoque</label>
                                                <input type="number" id="stock" name="stock" required
                                                    class="form-control" placeholder="0">
                                            </div>
                                        </div>

                                        <div class="mb-4">
                                            <label for="category_id" class="form-label">Categoria</label>
                                            <select name="category_id" id="category_id" required class="form-select">
                                                <option value="" disabled selected>Selecione uma categoria</option>
                                                <% categories.forEach(category=> { %>
                                                    <option value="<%= category.id %>">
                                                        <%= category.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>

                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-plus-circle me-2"></i>Criar Produto
                                            </button>
                                        </div>
                                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>