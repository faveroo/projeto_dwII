<%- include('partials/header') %>

    <% if (error && error.length> 0) { %>
        <div
            style="background: rgba(239, 68, 68, 0.2); border: 1px solid rgba(239, 68, 68, 0.3); color: #fca5a5; padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1.5rem; font-size: 0.9rem;">
            <%= error %>
        </div>
        <% } %>

            <% if (success && success.length> 0) { %>
                <div
                    style="background: rgba(34, 197, 94, 0.2); border: 1px solid rgba(34, 197, 94, 0.3); color: #86efac; padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1.5rem; font-size: 0.9rem;">
                    <%= success %>
                </div>
                <% } %>

                    <h1>Criar Produto</h1>
                    <form action="/product/store-product" method="POST" class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" id="name" name="name" required class="form-control"
                            placeholder="Nome do produto">
                        <br>
                        <label for="description">Descrição:</label>
                        <input type="text" id="description" name="description" required class="form-control"
                            placeholder="Descrição do produto">
                        <br>
                        <label for="price">Preço:</label>
                        <input type="text" id="price" name="price" required class="form-control"
                            placeholder="Preço do produto">
                        <br>
                        <label for="stock">Estoque:</label>
                        <input type="number" id="stock" name="stock" required class="form-control"
                            placeholder="Estoque do produto">
                        <br>
                        <label for="category_id">Categoria:</label>
                        <select name="category_id" id="category_id" required class="form-control">
                            <% categories.forEach(category=> { %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>
                                <% }) %>
                        </select>
                        <br>
                        <button type="submit" class="btn btn-primary">Criar Produto</button>
                    </form>

                    <%- include('partials/footer') %>